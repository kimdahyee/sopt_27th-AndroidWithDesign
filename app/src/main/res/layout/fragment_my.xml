<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_mypage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_bg_mypage"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/mypage_bg_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_bg_mypage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="143dp"
            android:background="@drawable/radius_35dp_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_bg_mypage"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/img_bg_mypage_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="103dp"
            android:src="@drawable/mypage_btn_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_bg_mypage" />

        <View
            android:id="@+id/view_bg_point"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="77dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/radius_15dp_lightpink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_bg_mypage" />

        <View
            android:id="@+id/view_bg_nickname"
            android:layout_width="69dp"
            android:layout_height="25dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/radius_30dp_lightgray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_bg_mypage" />

        <ImageView
            android:id="@+id/img_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:src="@drawable/mypage_img_level"
            app:layout_constraintEnd_toStartOf="@+id/tv_level"
            app:layout_constraintTop_toTopOf="@+id/view_bg_mypage" />

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="4dp"
            android:text="아기손"
            android:textSize="13dp"
            android:fontFamily="@font/notosans_regular"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/view_bg_nickname"
            app:layout_constraintEnd_toEndOf="@+id/view_bg_nickname"
            app:layout_constraintTop_toTopOf="@+id/view_bg_nickname" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="51dp"
            android:layout_marginTop="27dp"
            android:text="솝트"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosans_semibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_bg_mypage" />

        <TextView
            android:id="@+id/tv_nim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="35dp"
            android:text="님"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosans_regular"
            app:layout_constraintStart_toEndOf="@+id/tv_name"
            app:layout_constraintTop_toTopOf="@+id/view_bg_mypage" />

        <ImageView
            android:id="@+id/img_div_coinbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="98dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/mypage_div_coinbox"
            app:layout_constraintStart_toEndOf="@+id/tv_title_point"
            app:layout_constraintTop_toTopOf="@+id/view_bg_point" />

        <TextView
            android:id="@+id/tv_title_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="11dp"
            android:text="적립금"
            android:textSize="13dp"
            android:textColor="#939393"
            android:fontFamily="@font/notosans_regular"
            app:layout_constraintStart_toStartOf="@+id/view_bg_point"
            app:layout_constraintTop_toTopOf="@+id/view_bg_point" />

        <TextView
            android:id="@+id/tv_number_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/notosans_semibold"
            android:text="2000"
            android:textColor="#BE5647"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/view_bg_point"
            app:layout_constraintStart_toStartOf="@+id/view_bg_point"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_point" />

        <TextView
            android:id="@+id/tv_p_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="79dp"
            android:layout_marginBottom="6dp"
            android:text="P"
            android:textColor="#BE5647"
            android:textSize="18dp"
            android:fontFamily="@font/notosans_semibold"
            app:layout_constraintBottom_toBottomOf="@+id/view_bg_point"
            app:layout_constraintEnd_toStartOf="@+id/img_div_coinbox"
            app:layout_constraintStart_toEndOf="@+id/tv_number_point" />

        <TextView
            android:id="@+id/tv_title_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/notosans_regular"
            android:text="쿠폰"
            android:textColor="#939393"
            android:textSize="13dp"
            app:layout_constraintStart_toEndOf="@+id/img_div_coinbox"
            app:layout_constraintTop_toTopOf="@+id/view_bg_point" />

        <TextView
            android:id="@+id/tv_number_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/notosans_semibold"
            android:text="3"
            android:textColor="#BE5647"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/view_bg_point"
            app:layout_constraintStart_toEndOf="@+id/img_div_coinbox" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>