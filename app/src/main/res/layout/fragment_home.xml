<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="287dp"
        android:id="@+id/image_frame"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/main_div_banner"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/main_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        app:layout_constraintTop_toBottomOf="@+id/image_frame"
        android:orientation="horizontal">

        <Button
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:text="인기 작품"
            android:fontFamily="@font/notosans_midium"
            android:textSize="13sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="16dp"
            android:background="@drawable/main_box_btn_red"
            android:clickable="true"
            android:layout_marginTop="18dp"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:text="최신 작품"
            android:fontFamily="@font/notosans_midium"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"
            android:background="@drawable/main_box_btn_gray"
            android:clickable="true"
            android:textColorHint="#ffffff"
            android:layout_marginTop="18dp"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:text="인기 후기"
            android:textColor="#000000"
            android:fontFamily="@font/notosans_midium"
            android:textSize="13sp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/main_box_btn_gray"
            android:clickable="true"
            android:textColorHint="#ffffff"
            android:layout_marginTop="18dp"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:text="작가 추천"
            android:textColor="#000000"
            android:fontFamily="@font/notosans_midium"
            android:textSize="13sp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/main_box_btn_gray"
            android:clickable="true"
            android:textColorHint="#ffffff"
            android:layout_marginTop="18dp"/>

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/product_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_tab_bar">
    </androidx.viewpager.widget.ViewPager>

</androidx.constraintlayout.widget.ConstraintLayout>
