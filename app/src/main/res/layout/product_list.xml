<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_image"
        android:src="@drawable/main_img_product_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_category"
        android:fontFamily="@font/notosans_regular"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/product_image"
        app:layout_constraintStart_toStartOf="@+id/product_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_name"
        android:fontFamily="@font/notosans_regular"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/text_category"
        app:layout_constraintStart_toStartOf="@+id/text_category"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_writer"
        android:fontFamily="@font/notosans_regular"
        android:textSize="12sp"
        android:textColor="#797979"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_name"
        app:layout_constraintStart_toStartOf="@+id/text_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_sale"
        android:fontFamily="@font/notosans_bold"
        android:textSize="15sp"
        android:textColor="#d55c51"
        app:layout_constraintTop_toBottomOf="@+id/text_writer"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/text_writer"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_price"
        android:fontFamily="@font/notosans_bold"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toTopOf="@+id/text_sale"
        app:layout_constraintStart_toEndOf="@+id/text_sale"/>

</androidx.constraintlayout.widget.ConstraintLayout>
