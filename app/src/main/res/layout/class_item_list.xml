<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/class_rcv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/main_img_product_1"/>

    <TextView
        android:id="@+id/class_rcv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:fontFamily="@font/notosans_regular"
        android:textSize="10sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/class_rcv_image"
        app:layout_constraintStart_toStartOf="@id/class_rcv_image"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/class_rcv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품 이름"
        android:fontFamily="@font/notosans_regular"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/class_rcv_category"
        app:layout_constraintStart_toStartOf="@id/class_rcv_image"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/class_rcv_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작가 이름"
        android:fontFamily="@font/notosans_regular"
        android:textSize="12sp"
        android:textColor="#797979"
        app:layout_constraintTop_toBottomOf="@id/class_rcv_product_name"
        app:layout_constraintStart_toStartOf="@id/class_rcv_product_name"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/class_rcv_dc_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="할인율"
        android:fontFamily="@font/notosans_bold"
        android:textSize="15sp"
        android:textColor="#d55c51"
        app:layout_constraintTop_toBottomOf="@id/class_rcv_writer"
        app:layout_constraintStart_toStartOf="@id/class_rcv_writer"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/class_rcv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가격"
        android:fontFamily="@font/notosans_bold"
        android:textSize="15sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/class_rcv_dc_rate"
        app:layout_constraintStart_toEndOf="@id/class_rcv_dc_rate"
        android:layout_marginStart="3dp" />

    <Button
        android:id="@+id/class_rcv_star_btn"
        android:layout_width="19dp"
        android:layout_height="18dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/class_rcv_star_button"
        app:layout_constraintEnd_toEndOf="@id/class_rcv_image"
        app:layout_constraintTop_toTopOf="@id/class_rcv_image" />


    />

</androidx.constraintlayout.widget.ConstraintLayout>
